/**app.wxss**/
/* 引入样式文件 */
@import "./styles/iconfont.wxss";

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
} 

/* 小程序不支持通配符，所以手写初始化样式 */
page,view,text,swiper,swiper-item,image,navigator{
  padding: 0;
  margin: 0;
  box-sizing: border-box;
}

/* 主题颜色 */
page{
  /* 定义主题颜色 */
  --themeColor:#59A5EE;
  font-size: 30rpx;
}