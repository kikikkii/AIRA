/* pages/Result/Result.wxss */
page{
  height: 100%;
}
.ContentBox{
  background-color:rgba(7,98,193) ;
}

.TopBox{
  width: 100%;
  display: flex;
  background: linear-gradient(rgb(0, 110, 255), rgba(7,98,193));
}

.TopPlane{
  width: 100%;
  background-color: #fff;
  border: solid #fff;
  border-radius: 20rpx;
  margin: 10rpx;
}

.calendarBox{
  width: 100%;
}

.scroll-view {
  height: 120rpx;
  background-color: #00509F;
  width: 100%;
  white-space: nowrap;
  border-radius: 4rpx;
  display: flex;
}

.item {
  height: 120rpx;
  display: inline-block;
}
.text-view {
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
  width: 100%;
  height: 100%;
  color: #fff;
}
/* .month {
  font-size: 30rpx;
  margin-top: 10rpx;
} */
.week {
  font-size: 26rpx;
  margin-top: 10rpx;
}
.day {
  font-size: 26rpx;
  width: 100rpx;
  height: 60rpx;
  text-align: center;
  line-height: 60rpx;
}
/* 日期选中的样式 */
.day-active {
  background-color: #59A5EE;
  border-top: #fff 4rpx solid;
  border-top-right-radius: 4rpx;
  border-top-left-radius: 4rpx;
  color: #fff;
}

.tabsBox{
  position:fixed;
  bottom:0;
  z-index: 9999;
  width: 100%;
}

.ticketList{
  background-color: rgba(7,98,193);
}

.movable-area{
  width: 100%;
  height: 14vh;
  background-color: #fff;
  border: rgba(7,98,193) solid 10rpx;
  border-radius: 20rpx;
}
.movable-view{
  width: 100%;
  height: 100%;
}
.touch-item {
  font-size: 14px;
  display: flex;
  justify-content: space-between;
  width: 100%;
  height: 100%;
  overflow: hidden
}
.ticketInf{
  width: 100%;
  padding: 10px;
  line-height: 22px;
  margin-right:0;
  -webkit-transition: all 0.4s;
  transition: all 0.4s;
  -webkit-transform: translateX(90px);
  transform: translateX(90px);
  margin-left: -90px;
  display:flex;
}

.timePlace{
  flex: 5;
  display: flex;
  align-items: center;
}
.dtimeDplace{
  display: flex;
  flex-direction: column;
  align-items: center;
  
}

.timeInf{
  font-size: 56rpx;
}

.placeInf{
  font-size: 36rpx;
}

.airportInf{
  font-size: 26rpx;
  color: rgba(0, 0, 0, 0.411);
}

.priceInf{
  flex: 2;
  font-size: 60rpx;
  display: flex;
  color: rgb(244, 132, 32);
  align-items: center;
}

.money{
  font-size: 30rpx;
}

.col {
  background-color: #00509F;
  font-size: 26rpx;
  width: 90px;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  color: #fff;
  -webkit-transform: translateX(90px);
  transform: translateX(90px);
  -webkit-transition: all 0.4s;
  transition: all 0.4s;
}

.touch-move-active .ticketInf,
.touch-move-active .col {
  -webkit-transform: translateX(0);
  transform: translateX(0);
}

.iconcollect{
  font-size: 76rpx;
}

.iconcollectSelected{
  font-size: 76rpx;
}

.iconrightArrow{
  font-size: 140rpx;
}

.end{
  height: 200rpx;
  color: antiquewhite;
  display: flex;
  justify-content: center;
}

.end>text{
  margin-top: 50rpx;
}